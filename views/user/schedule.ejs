<%- include("./layout/head.ejs") %>

<div id="wrapper" class="<%=lock %> "class="container-fluid">

    <%- include("./layout/modal.ejs") %>

    <div class="container-fluid">

      <div class="row">
          <div class="col-12 background-1a navbar_container" ></div>
      </div>

      <div class="showcase_container">
        <%- include("./layout/new_showcase.ejs") %>
      </div>

    </div>

    <br />

    <p class=" text-banner schedule_banner">Free Quote! </p>

    <div class="row schedule_row">

      <div class="col-6"">

          <div class="width-100 schedule_quotesheet" >

            <form action="/modal" method="POST">

              <div class="row schedule_quotesheet_row ">

                  <div class="col-12">

                      <label>
                          First Name
                      </label>

                      <input class="form-control quote_input" name="firstName" placeholder="Enter first name" />
                  </div>

                  <div class="col-12">

                      <label>
                          Last Name
                      </label>

                      <input class="form-control quote_input" name="lastName" placeholder="Enter last name" />
                  </div>

                  <div class="col-12">

                      <label>
                          Screen Count
                      </label>

                      <input class="form-control quote_input "  type="number" name="screenCount" placeholder="Enter Screen Count" />

                  </div>

                  <div class="col-12">

                      <label>
                          Windows Less than 4X4 Ft
                      </label>

                      <input class="form-control quote_input "  type="number" name="smWindowCount" placeholder="Enter Window Count" />

                  </div>

                  <div class="col-12">

                      <label>
                          Windows Bigger than 4X4 and Less than 8X8 Ft
                      </label>

                      <input class="form-control quote_input"  type="number" name="mdWindowCount" placeholder="Enter Window Count" />

                  </div>

                  <div class="col-12">

                      <label>
                          Windows Bigger than 8X8 Ft
                      </label>

                      <input class="form-control quote_input "  type="number" name="lgWindowCount" placeholder="Enter Window Count" />

                  </div>

                  <div class="col-12">
                      <input type="hidden" name="key" value = <%= active_path %> placeholder="Enter first name" />
                  </div>

                  <div class="col-3"></div>

                  <div class="col-6 margin-top-small">
                    <button class="width-100 quotebutton"type="submit"> Receive Quote</button>
                  </div>

                  <div class='col-3'></div>

                </form>
          </div>

    </div>

  </div>

   <div class="col-6">
      <%- include("./layout/quote/before_and_after.ejs") %>
    </div>

    </div>

      <div class="margin-top-small-neg">
        <%- include("./layout/footer.ejs") %>
      </div>

<%- include("./layout/end.ejs") %>
